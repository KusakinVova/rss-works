{
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "import"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "env": {
        "es2021": true,
        "browser": true
    },
    "ignorePatterns": [
        "*.config.js", 
        "./node_modules/", 
        "dist/"
    ],
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off",
        "semi": 1,
        "@typescript-eslint/no-explicit-any": 2
    }
}

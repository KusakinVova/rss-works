{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2015",
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strictNullChecks": false,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src",
    "./types"
  ]
}
